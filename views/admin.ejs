  <script>
    // Professional Admin JavaScript with optimizations
    document.addEventListener('DOMContentLoaded', function() {
      console.log('Admin panel initialized');
      
      // Show loading state
      showLoading(true);
      
      // Load data with timeout
      Promise.all([
        loadStatsWithTimeout(),
        loadContactsWithTimeout()
      ]).catch(error => {
        console.error('Initial load failed:', error);
        showMessage('contactsMessage', 'Failed to load data. Retrying...', 'error');
        
        // Retry after 3 seconds
        setTimeout(() => {
          loadContacts();
          loadStats();
        }, 3000);
      });
      
      // Set up intervals with error handling
      setInterval(() => {
        loadStats().catch(e => console.log('Stats refresh failed'));
      }, 10000); // Refresh every 10 seconds
      
      setInterval(() => {
        loadContacts().catch(e => console.log('Contacts refresh failed'));
      }, 30000); // Refresh every 30 seconds
      
      // Search with debounce
      let searchTimeout;
      document.getElementById('searchInput')?.addEventListener('keyup', function(e) {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
          filterContacts(e.target.value);
        }, 300); // Debounce for 300ms
      });
    });

    // State management
    let currentContacts = [];
    let currentPage = 1;
    const itemsPerPage = 10;

    // Load with timeout to prevent hanging
    async function loadWithTimeout(promise, timeoutMs = 5000) {
      let timeoutId;
      const timeoutPromise = new Promise((_, reject) => {
        timeoutId = setTimeout(() => reject(new Error('Request timeout')), timeoutMs);
      });
      
      return Promise.race([
        promise,
        timeoutPromise
      ]).finally(() => clearTimeout(timeoutId));
    }

    // Load contacts with timeout
    async function loadContactsWithTimeout() {
      return loadWithTimeout(loadContacts(), 8000);
    }

    // Load stats with timeout
    async function loadStatsWithTimeout() {
      return loadWithTimeout(loadStats(), 5000);
    }

    // Load contacts
    async function loadContacts() {
      try {
        showLoading(true);
        
        const res = await fetch('/api/admin/Contacts-list');
        
        if (res.status === 401) {
          window.location.href = '/admin-login';
          return;
        }
        
        if (!res.ok) throw new Error(`HTTP error! status: ${res.status}`);
        
        const contacts = await res.json();
        currentContacts = contacts || [];
        
        // Update UI
        displayContacts(currentContacts);
        document.getElementById('contactCount').textContent = currentContacts.length;
        showLoading(false);
        
        return contacts;
      } catch (err) {
        console.error('Failed to load contacts:', err);
        showLoading(false);
        showMessage('contactsMessage', 'Failed to load contacts. Retrying...', 'error');
        throw err;
      }
    }

    // Display contacts with pagination
    function displayContacts(contacts) {
      const tbody = document.getElementById('contactsBody');
      const pagination = document.getElementById('pagination');
      
      if (!contacts || contacts.length === 0) {
        tbody.innerHTML = `
          <tr>
            <td colspan="4" style="text-align: center; padding: 3rem;">
              <div class="empty-state">
                <i class="fas fa-address-book"></i>
                <p>No contacts found</p>
                <small style="color: #94a3b8;">Contacts will appear here when users submit the form</small>
              </div>
            </td>
          </tr>
        `;
        pagination.innerHTML = '';
        return;
      }
      
      // Calculate pagination
      const start = (currentPage - 1) * itemsPerPage;
      const end = start + itemsPerPage;
      const paginatedContacts = contacts.slice(start, end);
      const totalPages = Math.ceil(contacts.length / itemsPerPage);
      
      // Display contacts
      tbody.innerHTML = paginatedContacts.map(contact => `
        <tr>
          <td><strong>${escapeHtml(contact.full_name)}</strong></td>
          <td>${escapeHtml(contact.phone)}</td>
          <td>${formatDate(contact.created_at)}</td>
          <td>
            <button class="delete-btn" onclick="deleteContact(${contact.id})" data-id="${contact.id}">
              <i class="fas fa-trash"></i> Delete
            </button>
          </td>
        </tr>
      `).join('');
      
      // Update pagination
      renderPagination(totalPages);
    }

    // Format date
    function formatDate(dateString) {
      try {
        const date = new Date(dateString);
        return date.toLocaleDateString() + ' ' + date.toLocaleTimeString();
      } catch {
        return dateString;
      }
    }

    // Render pagination
    function renderPagination(totalPages) {
      const pagination = document.getElementById('pagination');
      if (totalPages <= 1) {
        pagination.innerHTML = '';
        return;
      }
      
      let html = '';
      for (let i = 1; i <= totalPages; i++) {
        html += `<button class="page-btn ${i === currentPage ? 'active' : ''}" 
                       onclick="goToPage(${i})"
                       ${i === currentPage ? 'disabled' : ''}>
                  ${i}
                </button>`;
      }
      pagination.innerHTML = html;
    }

    // Go to page
    function goToPage(page) {
      currentPage = page;
      displayContacts(currentContacts);
    }

    // Filter contacts
    function filterContacts(searchTerm) {
      if (!searchTerm.trim()) {
        displayContacts(currentContacts);
        return;
      }
      
      const term = searchTerm.toLowerCase();
      const filtered = currentContacts.filter(contact => 
        (contact.full_name && contact.full_name.toLowerCase().includes(term)) ||
        (contact.phone && contact.phone.toLowerCase().includes(term))
      );
      
      currentPage = 1;
      displayContacts(filtered);
    }

    // Show/hide loading
    function showLoading(show) {
      const loadingEl = document.getElementById('loadingState');
      const tableEl = document.getElementById('tableContainer');
      
      if (show) {
        loadingEl.style.display = 'flex';
        tableEl.style.display = 'none';
      } else {
        loadingEl.style.display = 'none';
        tableEl.style.display = 'block';
      }
    }

    // Load statistics
    async function loadStats() {
      try {
        const res = await fetch('/api/count');
        if (res.ok) {
          const data = await res.json();
          document.getElementById('collected').textContent = data.collected;
          document.getElementById('target').textContent = data.target;
          document.getElementById('remaining').textContent = data.remaining;
          document.getElementById('percent').textContent = data.percent + '%';
        }
      } catch (err) {
        console.error('Failed to load stats:', err);
        throw err;
      }
    }

    // Delete contact
    async function deleteContact(id) {
      if (!confirm('Are you sure you want to delete this contact?')) return;
      
      const btn = document.querySelector(`button[data-id="${id}"]`);
      if (btn) {
        btn.disabled = true;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Deleting...';
      }
      
      try {
        const res = await fetch('/api/admin/delete-contact', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id })
        });
        
        if (res.status === 401) {
          window.location.href = '/admin-login';
          return;
        }
        
        if (res.ok) {
          showMessage('contactsMessage', 'Contact deleted successfully', 'success');
          await loadContacts(); // Reload contacts
          await loadStats(); // Update stats
        } else {
          const data = await res.json();
          showMessage('contactsMessage', data.error || 'Failed to delete', 'error');
        }
      } catch (err) {
        showMessage('contactsMessage', 'Network error', 'error');
      } finally {
        if (btn) {
          btn.disabled = false;
          btn.innerHTML = '<i class="fas fa-trash"></i> Delete';
        }
      }
    }

    // Download VCF
    document.getElementById('downloadBtn').addEventListener('click', async function() {
      const btn = this;
      const originalHtml = btn.innerHTML;
      
      btn.disabled = true;
      btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Exporting...';
      
      try {
        const res = await fetch('/api/admin/export-vcf');
        if (res.status === 401) {
          window.location.href = '/admin-login';
          return;
        }
        
        const blob = await res.blob();
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `meta-contacts-${new Date().toISOString().split('T')[0]}.vcf`;
        a.click();
        window.URL.revokeObjectURL(url);
        
        showMessage('contactsMessage', 'Export completed successfully', 'success');
      } catch (err) {
        showMessage('contactsMessage', 'Failed to download', 'error');
      } finally {
        btn.disabled = false;
        btn.innerHTML = originalHtml;
      }
    });

    // Reset contacts
    document.getElementById('resetBtn').addEventListener('click', async function() {
      const confirmPass = document.getElementById('resetConfirm').value;
      const btn = this;
      const originalHtml = btn.innerHTML;
      
      if (!confirm('⚠️ WARNING: This will delete ALL contacts! This action cannot be undone.')) return;
      
      btn.disabled = true;
      btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Resetting...';
      
      try {
        const res = await fetch('/api/admin/reset', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ confirm_password: confirmPass })
        });
        
        if (res.ok) {
          showMessage('resetMessage', 'All contacts deleted successfully', 'success');
          await loadContacts();
          await loadStats();
        } else {
          const data = await res.json();
          showMessage('resetMessage', data.error || 'Failed to reset', 'error');
        }
      } catch (err) {
        showMessage('resetMessage', 'Network error', 'error');
      } finally {
        btn.disabled = false;
        btn.innerHTML = originalHtml;
      }
    });

    // Set goal
    document.getElementById('setGoalBtn').addEventListener('click', async function() {
      const goal = document.getElementById('goalInput').value;
      const btn = this;
      const originalHtml = btn.innerHTML;
      
      if (!goal || goal < 1) {
        showMessage('goalMessage', 'Please enter a valid number', 'error');
        return;
      }
      
      btn.disabled = true;
      btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating...';
      
      try {
        const res = await fetch('/api/admin/set-goal', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ goal: parseInt(goal) })
        });
        
        if (res.ok) {
          const data = await res.json();
          showMessage('goalMessage', `Goal updated to ${data.goal}`, 'success');
          await loadStats();
          document.getElementById('goalInput').value = '';
        } else {
          const data = await res.json();
          showMessage('goalMessage', data.error || 'Failed to set goal', 'error');
        }
      } catch (err) {
        showMessage('goalMessage', 'Network error', 'error');
      } finally {
        btn.disabled = false;
        btn.innerHTML = originalHtml;
      }
    });

    // Helper: Show message
    function showMessage(elementId, text, type) {
      const el = document.getElementById(elementId);
      if (el) {
        el.textContent = text;
        el.className = `message ${type}`;
        setTimeout(() => {
          el.textContent = '';
          el.className = '';
        }, 3000);
      }
    }

    // Helper: Escape HTML
    function escapeHtml(str) {
      if (!str) return '';
      return String(str)
        .replace(/&/g, '&amp;')
        .replace(/</g, '&lt;')
        .replace(/>/g, '&gt;')
        .replace(/"/g, '&quot;')
        .replace(/'/g, '&#39;');
    }
  </script>
