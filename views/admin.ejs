<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=yes" />
  <title>Admin Panel - Meta VCF</title>
  <style>
    /* Professional CSS Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* CSS Variables for easy theme management */
    :root {
      --primary: #13e6c9;
      --primary-dark: #0fc9ad;
      --primary-glow: rgba(19, 230, 201, 0.3);
      --danger: #ef4444;
      --success: #10b981;
      --info: #06b6d4;
      --dark-bg: #0b1220;
      --darker-bg: #061018;
      --card-bg: #0f1724;
      --border: #17303a;
      --text: #e6eef0;
      --text-muted: #94a3b8;
      --text-dark: #042027;
    }

    body { 
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, var(--dark-bg), #071124); 
      color: var(--text); 
      margin: 0; 
      min-height: 100vh;
      line-height: 1.5;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    /* Header with mobile-first approach */
    header { 
      display: flex; 
      align-items: center; 
      justify-content: space-between; 
      padding: 16px; 
      background: rgba(2, 6, 9, 0.95);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--border);
      position: sticky;
      top: 0;
      z-index: 50;
    }

    .header-left {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .menu-button { 
      width: 40px; 
      height: 40px; 
      display: flex; 
      align-items: center; 
      justify-content: center; 
      background: var(--darker-bg); 
      border-radius: 10px; 
      border: 1.5px solid var(--border); 
      cursor: pointer;
      transition: all 0.2s;
      color: var(--primary);
    }

    .menu-button:hover {
      border-color: var(--primary);
      background: var(--card-bg);
    }

    .menu-button svg {
      width: 22px;
      height: 22px;
    }

    h1 { 
      color: var(--primary); 
      margin: 0; 
      font-size: clamp(18px, 5vw, 24px);
      font-weight: 700; 
      letter-spacing: -0.5px;
    }

    .header-right {
      display: flex;
      align-items: center;
    }

    .home-link {
      color: var(--text-muted);
      text-decoration: none;
      font-size: 14px;
      padding: 8px 12px;
      border-radius: 8px;
      background: var(--darker-bg);
      border: 1px solid var(--border);
      transition: all 0.2s;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .home-link:hover {
      border-color: var(--primary);
      color: var(--primary);
    }

    /* Dropdown Menu */
    .menu-container {
      position: relative;
    }

    .dropdown-menu {
      position: absolute;
      top: 48px;
      left: 0;
      background: rgba(6, 10, 18, 0.98);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      min-width: 240px;
      border: 1px solid var(--border);
      border-radius: 12px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
      z-index: 100;
      padding: 8px 0;
      display: none;
    }

    .dropdown-menu.show {
      display: block;
    }

    .dropdown-menu a {
      display: flex;
      align-items: center;
      gap: 12px;
      color: var(--text);
      text-decoration: none;
      padding: 14px 18px;
      font-size: 15px;
      transition: all 0.2s;
      border-bottom: 1px solid var(--border);
    }

    .dropdown-menu a:last-child {
      border-bottom: none;
    }

    .dropdown-menu a:hover {
      background: var(--card-bg);
      color: var(--primary);
      padding-left: 24px;
    }

    .dropdown-menu hr {
      border: none;
      border-top: 1px solid var(--border);
      margin: 8px 0;
    }

    .dropdown-menu small {
      color: var(--text-muted);
      display: block;
      text-align: center;
      padding: 12px;
      font-size: 12px;
    }

    /* Main Content */
    main { 
      max-width: 1200px; 
      margin: 0 auto; 
      padding: 20px 16px; 
    }

    /* Stats Cards Grid */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 16px;
      margin-bottom: 24px;
    }

    .stat-card {
      background: var(--card-bg);
      border: 1px solid var(--border);
      border-radius: 16px;
      padding: 20px 16px;
      backdrop-filter: blur(5px);
      -webkit-backdrop-filter: blur(5px);
      transition: transform 0.2s;
    }

    .stat-card:hover {
      transform: translateY(-2px);
      border-color: var(--primary);
    }

    .stat-label {
      color: var(--text-muted);
      font-size: 13px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 8px;
    }

    .stat-value {
      font-size: clamp(28px, 6vw, 36px);
      font-weight: 700;
      color: var(--primary);
      line-height: 1.2;
    }

    .stat-sub {
      font-size: 12px;
      color: var(--text-muted);
      margin-top: 4px;
    }

    /* Controls Section */
    .controls-section {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .control-card {
      background: var(--card-bg);
      border: 1px solid var(--border);
      border-radius: 20px;
      padding: 20px;
      backdrop-filter: blur(5px);
      -webkit-backdrop-filter: blur(5px);
    }

    .control-card h3 {
      color: var(--primary);
      font-size: 18px;
      margin-bottom: 16px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .control-card label {
      display: block;
      color: var(--text-muted);
      font-size: 13px;
      margin-bottom: 6px;
      font-weight: 500;
    }

    .control-card input {
      width: 100%;
      padding: 12px 16px;
      border-radius: 12px;
      border: 1.5px solid var(--border);
      background: var(--darker-bg);
      color: var(--text);
      font-size: 15px;
      transition: all 0.2s;
    }

    .control-card input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px var(--primary-glow);
    }

    .control-card button {
      width: 100%;
      padding: 14px;
      border-radius: 12px;
      border: none;
      font-weight: 600;
      font-size: 15px;
      cursor: pointer;
      transition: all 0.2s;
      margin-top: 12px;
    }

    .btn-success {
      background: var(--success);
      color: white;
    }

    .btn-success:hover {
      background: #0d9668;
      transform: translateY(-1px);
    }

    .btn-danger {
      background: var(--danger);
      color: white;
    }

    .btn-danger:hover {
      background: #dc2626;
      transform: translateY(-1px);
    }

    .btn-info {
      background: var(--info);
      color: white;
    }

    .btn-info:hover {
      background: #0891b2;
      transform: translateY(-1px);
    }

    .message-box {
      margin-top: 12px;
      padding: 12px;
      border-radius: 10px;
      font-size: 14px;
      display: none;
    }

    .message-box.show {
      display: block;
    }

    .message-box.success {
      background: #064e3b;
      color: #c7f4e9;
      border: 1px solid var(--success);
    }

    .message-box.error {
      background: #7f1d1d;
      color: #ffb4b4;
      border: 1px solid var(--danger);
    }

    /* Contacts Table Section */
    .contacts-section {
      background: var(--card-bg);
      border: 1px solid var(--border);
      border-radius: 24px;
      padding: 20px;
      backdrop-filter: blur(5px);
      -webkit-backdrop-filter: blur(5px);
    }

    .section-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 12px;
      margin-bottom: 20px;
    }

    .section-header h2 {
      color: var(--primary);
      font-size: clamp(20px, 4vw, 24px);
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .download-btn {
      background: var(--success);
      color: white;
      border: none;
      padding: 12px 24px;
      border-radius: 12px;
      font-weight: 600;
      font-size: 15px;
      cursor: pointer;
      transition: all 0.2s;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .download-btn:hover {
      background: #0d9668;
      transform: translateY(-1px);
    }

    /* Table Styles */
    .table-responsive {
      overflow-x: auto;
      margin: 0 -20px;
      padding: 0 20px;
      -webkit-overflow-scrolling: touch;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      min-width: 600px;
    }

    th {
      text-align: left;
      padding: 16px 12px;
      color: var(--primary);
      font-weight: 600;
      font-size: 14px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border-bottom: 2px solid var(--border);
    }

    td {
      padding: 16px 12px;
      border-bottom: 1px solid var(--border);
      font-size: 15px;
    }

    tr:hover td {
      background: rgba(19, 230, 201, 0.05);
    }

    .delete-btn {
      background: var(--danger);
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 8px;
      font-size: 13px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }

    .delete-btn:hover {
      background: #dc2626;
    }

    .empty-state {
      text-align: center;
      padding: 40px;
      color: var(--text-muted);
      font-size: 16px;
    }

    /* Mobile Optimizations */
    @media (max-width: 640px) {
      header {
        padding: 12px;
      }

      .home-link span {
        display: none;
      }

      .home-link {
        padding: 10px;
      }

      .stats-grid {
        gap: 12px;
      }

      .stat-card {
        padding: 16px 12px;
      }

      .control-card {
        padding: 16px;
      }

      .contacts-section {
        padding: 16px;
      }

      th, td {
        padding: 12px 8px;
        font-size: 14px;
      }

      .delete-btn {
        padding: 6px 12px;
        font-size: 12px;
      }
    }

    /* Loading States */
    .loading {
      opacity: 0.7;
      pointer-events: none;
    }

    /* Footer */
    footer {
      text-align: center;
      padding: 24px;
      color: var(--text-muted);
      border-top: 1px solid var(--border);
      margin-top: 40px;
      font-size: 13px;
    }
  </style>
</head>
<body>
  <header>
    <div class="header-left">
      <!-- Menu Container -->
      <div class="menu-container">
        <button class="menu-button" id="menuButton" aria-label="Menu">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 6h18M3 12h18M3 18h18"/>
          </svg>
        </button>
        
        <!-- Dropdown Menu -->
        <div class="dropdown-menu" id="dropdownMenu">
          <a href="/">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9 22 9 12 15 12 15 22"/>
            </svg>
            Home
          </a>
          <a href="/admin-login">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
            </svg>
            Admin Login
          </a>
          <hr>
          <small>¬© 2026 Meta Team</small>
        </div>
      </div>
      
      <h1>üîê Admin Panel</h1>
    </div>
    
    <div class="header-right">
      <a href="/" class="home-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
          <polyline points="9 22 9 12 15 12 15 22"/>
        </svg>
        <span>Back to Home</span>
      </a>
    </div>
  </header>

  <main>
    <!-- Stats Grid -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-label">Total Collected</div>
        <div class="stat-value" id="collected"><%= collected %></div>
        <div class="stat-sub">contacts</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-label">Target Goal</div>
        <div class="stat-value" id="target"><%= target %></div>
        <div class="stat-sub">contacts needed</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-label">Remaining</div>
        <div class="stat-value" id="remaining"><%= target - collected %></div>
        <div class="stat-sub">to reach goal</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-label">Progress</div>
        <div class="stat-value" id="percent"><%= Math.round((collected/target)*100) %>%</div>
        <div class="stat-sub">complete</div>
      </div>
    </div>

    <!-- Controls Section -->
    <div class="controls-section">
      <!-- Set Goal Card -->
      <div class="control-card">
        <h3>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <path d="M12 8v8M8 12h8"/>
          </svg>
          Set Goal
        </h3>
        <label for="goalInput">Target Number</label>
        <input id="goalInput" type="number" placeholder="Enter goal amount" min="1" value="<%= target %>" />
        <button id="setGoalBtn" class="btn-info">Update Goal</button>
        <div id="goalMessage" class="message-box"></div>
      </div>

      <!-- Reset Contacts Card -->
      <div class="control-card">
        <h3>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 6h18M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
          </svg>
          Reset Contacts
        </h3>
        <label for="resetConfirm">Confirm Password</label>
        <input id="resetConfirm" type="password" placeholder="Enter reset password" />
        <button id="resetBtn" class="btn-danger">Reset All Contacts</button>
        <div id="resetMessage" class="message-box"></div>
      </div>
    </div>

    <!-- Contacts Section -->
    <div class="contacts-section">
      <div class="section-header">
        <h2>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
          Contacts List
        </h2>
        <button id="downloadBtn" class="download-btn">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
            <polyline points="7 10 12 15 17 10"/>
            <line x1="12" y1="15" x2="12" y2="3"/>
          </svg>
          Export VCF
        </button>
      </div>

      <!-- Table -->
      <div class="table-responsive">
        <table id="contactsTable">
          <thead>
            <tr>
              <th>Name</th>
              <th>Phone</th>
              <th>Date Added</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="contactsTableBody">
            <tr>
              <td colspan="4" class="empty-state">Loading contacts...</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div id="contactsMessage" class="message-box"></div>
    </div>
  </main>

  <footer>
    <p>&copy; 2026 Meta VCF | Built by Meta Team</p>
  </footer>

  <script>
    // Professional JavaScript with error handling
    document.addEventListener('DOMContentLoaded', function() {
      // Menu functionality
      const menuButton = document.getElementById('menuButton');
      const dropdown = document.getElementById('dropdownMenu');
      
      if (menuButton && dropdown) {
        menuButton.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          dropdown.classList.toggle('show');
        });
        
        document.addEventListener('click', function(e) {
          if (!menuButton.contains(e.target) && !dropdown.contains(e.target)) {
            dropdown.classList.remove('show');
          }
        });
        
        document.addEventListener('keydown', function(e) {
          if (e.key === 'Escape' && dropdown.classList.contains('show')) {
            dropdown.classList.remove('show');
          }
        });
      }

      // Initialize data
      loadContacts();
      loadStats();

      // Download VCF
      document.getElementById('downloadBtn').addEventListener('click', downloadVCF);
      
      // Set Goal
      document.getElementById('setGoalBtn').addEventListener('click', setGoal);
      
      // Reset Contacts
      document.getElementById('resetBtn').addEventListener('click', resetContacts);

      // Auto-refresh every 10 seconds
      setInterval(() => {
        loadStats();
        loadContacts();
      }, 10000);
    });

    // Load contacts function
    async function loadContacts() {
      try {
        const res = await fetch('/api/admin/Contacts-list');
        if (res.status === 401) {
          window.location.href = '/admin-login';
          return;
        }
        
        if (!res.ok) throw new Error('Failed to load');
        
        const contacts = await res.json();
        renderContacts(contacts);
      } catch (err) {
        showMessage('contactsMessage', 'Error loading contacts', 'error');
        console.error('Load contacts error:', err);
      }
    }

    // Render contacts table
    function renderContacts(contacts) {
      const tbody = document.getElementById('contactsTableBody');
      
      if (!contacts || contacts.length === 0) {
        tbody.innerHTML = '<tr><td colspan="4" class="empty-state">No contacts found</td></tr>';
        return;
      }

      tbody.innerHTML = contacts.map(contact => `
        <tr>
          <td>${escapeHtml(contact.full_name)}</td>
          <td>${escapeHtml(contact.phone)}</td>
          <td>${formatDate(contact.created_at)}</td>
          <td>
            <button class="delete-btn" onclick="deleteContact(${contact.id})">
              Delete
            </button>
          </td>
        </tr>
      `).join('');
    }

    // Delete contact function
    window.deleteContact = async function(id) {
      if (!confirm('Are you sure you want to delete this contact?')) return;
      
      try {
        const res = await fetch('/api/admin/delete-contact', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id })
        });

        if (res.status === 401) {
          window.location.href = '/admin-login';
          return;
        }

        const data = await res.json();
        
        if (res.ok) {
          showMessage('contactsMessage', 'Contact deleted successfully', 'success');
          loadContacts();
          loadStats();
        } else {
          showMessage('contactsMessage', data.error || 'Delete failed', 'error');
        }
      } catch (err) {
        showMessage('contactsMessage', 'Network error', 'error');
        console.error('Delete error:', err);
      }
    };

    // Download VCF function
    async function downloadVCF() {
      try {
        const res = await fetch('/api/admin/export-vcf');
        
        if (res.status === 401) {
          window.location.href = '/admin-login';
          return;
        }

        if (!res.ok) throw new Error('Download failed');

        const blob = await res.blob();
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `meta-contacts-${new Date().toISOString().split('T')[0]}.vcf`;
        document.body.appendChild(a);
        a.click();
        a.remove();
        window.URL.revokeObjectURL(url);
        
        showMessage('contactsMessage', 'Download started!', 'success');
      } catch (err) {
        showMessage('contactsMessage', 'Error downloading VCF', 'error');
        console.error('Download error:', err);
      }
    }

    // Set goal function
    async function setGoal() {
      const goal = document.getElementById('goalInput').value.trim();
      const goalMsg = document.getElementById('goalMessage');
      
      if (!goal || isNaN(goal) || parseInt(goal) <= 0) {
        showMessage('goalMessage', 'Please enter a valid number', 'error');
        return;
      }

      try {
        const res = await fetch('/api/admin/set-goal', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ goal: parseInt(goal, 10) })
        });

        if (res.status === 401) {
          window.location.href = '/admin-login';
          return;
        }

        const data = await res.json();
        
        if (res.ok) {
          showMessage('goalMessage', `Goal updated to ${data.goal}!`, 'success');
          loadStats();
        } else {
          showMessage('goalMessage', data.error || 'Failed to update goal', 'error');
        }
      } catch (err) {
        showMessage('goalMessage', 'Network error', 'error');
        console.error('Set goal error:', err);
      }
    }

    // Reset contacts function
    async function resetContacts() {
      const confirmPassword = document.getElementById('resetConfirm').value;
      const resetMsg = document.getElementById('resetMessage');
      
      if (!confirmPassword) {
        showMessage('resetMessage', 'Please enter the confirmation password', 'error');
        return;
      }

      if (!confirm('‚ö†Ô∏è WARNING: This will delete ALL contacts! Are you sure?')) {
        return;
      }

      try {
        const res = await fetch('/api/admin/reset', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ confirm_password: confirmPassword })
        });

        if (res.status === 401) {
          window.location.href = '/admin-login';
          return;
        }

        const data = await res.json();
        
        if (res.ok) {
          showMessage('resetMessage', 'All contacts have been deleted', 'success');
          document.getElementById('resetConfirm').value = '';
          loadContacts();
          loadStats();
        } else {
          showMessage('resetMessage', data.error || 'Reset failed', 'error');
        }
      } catch (err) {
        showMessage('resetMessage', 'Network error', 'error');
        console.error('Reset error:', err);
      }
    }

    // Load stats function
    async function loadStats() {
      try {
        const res = await fetch('/api/count');
        if (res.ok) {
          const data = await res.json();
          document.getElementById('collected').textContent = data.collected;
          document.getElementById('target').textContent = data.target;
          document.getElementById('remaining').textContent = data.remaining;
          document.getElementById('percent').textContent = data.percent + '%';
        }
      } catch (err) {
        console.error('Load stats error:', err);
      }
    }

    // Helper function to show messages
    function showMessage(elementId, text, type) {
      const msg = document.getElementById(elementId);
      if (msg) {
        msg.textContent = text;
        msg.className = `message-box show ${type}`;
        setTimeout(() => {
          msg.classList.remove('show');
        }, 5000);
      }
    }

    // Helper function to escape HTML
    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Helper function to format date
    function formatDate(dateString) {
      if (!dateString) return 'N/A';
      try {
        const date = new Date(dateString);
        return date.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'short',
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit'
        });
      } catch (e) {
        return dateString;
      }
    }
  </script>
