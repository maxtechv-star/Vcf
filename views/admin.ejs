<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Admin Panel - Meta VCF</title>
  <style>
    body{ font-family:Inter, system-ui, sans-serif; background:linear-gradient(135deg,#0b1220,#071124); color:#e6eef0; margin:0; }
    header{ display:flex; justify-content:space-between; align-items:center; padding:20px; border-bottom:1px solid #17303a;}
    h1{ color:#13e6c9; margin:0;}
    nav a{ color:#79fff0; text-decoration:none; }
    main{ max-width:1000px; margin:20px auto; padding:20px;}
    .card{ background:#0b1220; padding:18px; border-radius:12px; border:1px solid #17303a; margin-bottom:12px;}
    .controls{ display:grid; grid-template-columns: repeat(auto-fit,minmax(250px,1fr)); gap:12px; }
    input{ width:100%; padding:8px; border-radius:6px; border:1px solid #17303a; background:#061018; color:#fff; }
    button{ width:100%; padding:10px; border-radius:8px; border:none; font-weight:700; cursor:pointer; }
    .success{ background:#10b981; color:#001e1b;}
    .danger{ background:#ef4444; color:#fff;}
    .info{ background:#06b6d4; color:#fff;}
    .message{ margin-top:8px; padding:8px; border-radius:6px; }
    .message.success{ background:#064e3b; color:#c7f4e9; border:1px solid #10b981;}
    .message.error{ background:#7f1d1d; color:#ffb4b4; border:1px solid #ef4444;}
    table{ width:100%; border-collapse:collapse; margin-top:12px; }
    th, td{ padding:8px; text-align:left; border-bottom:1px solid #17303a; font-size:14px; }
    .small { font-size:13px; color:#94a3b8; }
    .controls-top { display:flex; gap:12px; align-items:center; margin-bottom:12px; }
    .sidebar { display:none; } /* keep top-left menu for home only or add if needed */
    @media(max-width:640px){ .controls{ grid-template-columns:1fr; } table{ font-size:12px; } }
  </style>
</head>
<body>
  <header>
    <h1>üîê Admin Panel</h1>
    <nav><a href="/">‚Üê Back to Home</a></nav>
  </header>

  <main>
    <div class="card">
      <h2>üìä Live Progress</h2>
      <div style="display:flex; gap:12px; margin-top:12px;">
        <div style="flex:1; background:#061018; padding:12px; border-radius:8px; border:1px solid #17303a;">
          <div class="small">Collected</div>
          <div id="collected" style="font-size:24px; color:#13e6c9; font-weight:700;"><%= collected %></div>
        </div>
        <div style="flex:1; background:#061018; padding:12px; border-radius:8px; border:1px solid #17303a;">
          <div class="small">Target</div>
          <div id="target" style="font-size:24px; color:#13e6c9; font-weight:700;"><%= target %></div>
        </div>
      </div>
    </div>

    <div class="controls-top">
      <div style="flex:1;">
        <button id="downloadBtn" class="success">‚¨áÔ∏è Download VCF (Admin)</button>
      </div>

      <div style="width:280px;">
        <label>Confirm Password to Reset</label>
        <input id="resetConfirm" type="password" value="1542" />
        <button id="resetBtn" class="danger" style="margin-top:8px;">Reset All Contacts</button>
        <div id="resetMessage"></div>
      </div>

      <div style="width:220px;">
        <label>Set Custom Goal</label>
        <input id="goalInput" type="number" placeholder="e.g., 1000" min="1" />
        <button id="setGoalBtn" class="info" style="margin-top:8px;">Set Goal</button>
        <div id="goalMessage"></div>
      </div>
    </div>

    <div class="card">
      <h3>üìá Contacts</h3>
      <p class="small">You can delete individual contacts from here. Deleted contacts will be removed from future VCF exports.</p>
      <table id="contactsTable">
        <thead>
          <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Added</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <!-- rows will be rendered client-side -->
        </tbody>
      </table>
      <div id="contactsMessage"></div>
    </div>
  </main>

  <footer style="text-align:center; padding:20px; color:#6b7280; border-top:1px solid #17303a;">
    <small>&copy; 2026 Meta VCF</small>
  </footer>

  <script>
    async function fetchCount() {
      try {
        const res = await fetch('/api/count');
        if (res.ok) {
          const data = await res.json();
          document.getElementById('collected').textContent = data.collected;
          document.getElementById('target').textContent = data.target;
        }
      } catch (err) {
        console.error(err);
      }
    }

    async function fetchContacts() {
      try {
        const res = await fetch('/api/admin/contacts-list');
        if (res.status === 401) { window.location.href = '/admin-login'; return; }
        if (!res.ok) { document.getElementById('contactsMessage').textContent = 'Failed to load contacts'; return; }
        const json = await res.json();
        const tbody = document.querySelector('#contactsTable tbody');
        tbody.innerHTML = '';
        if (!json.length) {
          tbody.innerHTML = '<tr><td colspan="4" class="small">No contacts collected yet.</td></tr>';
          return;
        }
        json.forEach(c => {
          const tr = document.createElement('tr');
          tr.innerHTML = `<td>${escapeHtml(c.full_name)}</td>
                          <td>${escapeHtml(c.phone)}</td>
                          <td class="small">${new Date(c.created_at).toLocaleString()}</td>
                          <td><button data-id="${c.id}" class="delBtn" style="padding:6px 10px;border-radius:6px;background:#ef4444;color:white;border:none;cursor:pointer;">Delete</button></td>`;
          tbody.appendChild(tr);
        });
        // attach delete handlers
        document.querySelectorAll('.delBtn').forEach(btn => {
          btn.addEventListener('click', async (e) => {
            const id = btn.getAttribute('data-id');
            if (!confirm('Delete this contact?')) return;
            try {
              const res = await fetch('/api/admin/delete-contact', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: parseInt(id,10) })
              });
              if (res.status === 401) return window.location.href = '/admin-login';
              const json = await res.json();
              if (!res.ok) {
                document.getElementById('contactsMessage').className = 'message error';
                document.getElementById('contactsMessage').textContent = '‚ùå ' + (json?.error || 'Failed to delete');
                return;
              }
              document.getElementById('contactsMessage').className = 'message success';
              document.getElementById('contactsMessage').textContent = '‚úÖ Contact deleted';
              fetchContacts();
              fetchCount();
            } catch (err) {
              document.getElementById('contactsMessage').className = 'message error';
              document.getElementById('contactsMessage').textContent = '‚ùå Network error';
            }
          });
        });
      } catch (err) {
        console.error(err);
      }
    }

    function escapeHtml(str) {
      if (!str) return '';
      return String(str).replace(/[&<>"'`]/g, (s) => ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;',"`":'&#96;'})[s]);
    }

    document.getElementById('downloadBtn').addEventListener('click', async () => {
      try {
        // Admin export bypasses goal requirement
        const res = await fetch('/api/admin/export-vcf');
        if (res.status === 401) return window.location.href = '/admin-login';
        if (!res.ok) {
          const json = await res.json();
          document.getElementById('downloadMessage').className = 'message error';
          document.getElementById('downloadMessage').textContent = '‚ùå ' + (json?.error || 'Failed');
          return;
        }
        const blob = await res.blob();
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'meta-contacts.vcf';
        document.body.appendChild(a);
        a.click();
        a.remove();
        window.URL.revokeObjectURL(url);
        document.getElementById('downloadMessage').className = 'message success';
        document.getElementById('downloadMessage').textContent = '‚úÖ Download started!';
      } catch (err) {
        document.getElementById('downloadMessage').className = 'message error';
        document.getElementById('downloadMessage').textContent = '‚ùå Error downloading file';
      }
    });

    document.getElementById('resetBtn').addEventListener('click', async () => {
      if (!confirm('‚ö†Ô∏è Are you sure? This will delete ALL contacts!')) return;
      const confirm_password = document.getElementById('resetConfirm').value;
      try {
        const res = await fetch('/api/admin/reset', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ confirm_password })
        });
        if (res.status === 401) return window.location.href = '/admin-login';
        const json = await res.json();
        if (!res.ok) {
          document.getElementById('resetMessage').className = 'message error';
          document.getElementById('resetMessage').textContent = '‚ùå ' + (json?.error || 'Failed');
          return;
        }
        document.getElementById('resetMessage').className = 'message success';
        document.getElementById('resetMessage').textContent = '‚úÖ All contacts cleared!';
        fetchContacts();
        fetchCount();
      } catch (err) {
        document.getElementById('resetMessage').className = 'message error';
        document.getElementById('resetMessage').textContent = '‚ùå Error resetting contacts';
      }
    });

    document.getElementById('setGoalBtn').addEventListener('click', async () => {
      const goal = document.getElementById('goalInput').value.trim();
      if (!goal || isNaN(goal) || parseInt(goal) <= 0) {
        document.getElementById('goalMessage').className = 'message error';
        document.getElementById('goalMessage').textContent = '‚ùå Enter a valid number';
        return;
      }
      try {
        const res = await fetch('/api/admin/set-goal', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ goal: parseInt(goal, 10) })
        });
        if (res.status === 401) return window.location.href = '/admin-login';
        const json = await res.json();
        if (!res.ok) {
          document.getElementById('goalMessage').className = 'message error';
          document.getElementById('goalMessage').textContent = '‚ùå ' + (json?.error || 'Failed');
          return;
        }
        document.getElementById('goalMessage').className = 'message success';
        document.getElementById('goalMessage').textContent = '‚úÖ Goal set to ' + json.goal + '!';
        document.getElementById('goalInput').value = '';
        fetchCount();
      } catch (err) {
        document.getElementById('goalMessage').className = 'message error';
        document.getElementById('goalMessage').textContent = '‚ùå Error setting goal';
      }
    });

    // load on open
    fetchContacts();
    fetchCount();
    setInterval(fetchCount, 5000);
    setInterval(fetchContacts, 10000);
  </script>
</body>
</html>