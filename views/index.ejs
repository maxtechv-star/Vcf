<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Meta VCF - Collect Contacts</title>
  <style>
    :root{ --teal:#13e6c9; --muted:#94a3b8; }
    body { 
      font-family: Inter, system-ui, sans-serif; 
      background: black; 
      color: #e6eef0; 
      margin:0; 
      padding:0; 
      min-height:100vh; 
      overflow-x:hidden; 
    }
    .bg-video { 
      position: fixed; 
      right: 0; 
      bottom: 0; 
      min-width: 100%; 
      min-height: 100%; 
      width: auto; 
      height: auto; 
      z-index: -2; 
      object-fit: cover; 
      opacity: 0.12; 
    }
    .bg-overlay { 
      position: fixed; 
      inset: 0; 
      background: linear-gradient(180deg, rgba(3,7,10,0.55), rgba(3,7,10,0.7)); 
      z-index:-1; 
    }
    
    /* Header styles */
    header { 
      display: flex; 
      align-items: center; 
      justify-content: space-between; 
      padding: 15px 20px; 
      position: relative; 
      z-index: 10; 
      background: rgba(2,6,9,0.8);
      backdrop-filter: blur(5px);
      border-bottom: 1px solid #17303a;
    }
    
    .left-controls { 
      display: flex; 
      align-items: center; 
      gap: 15px; 
      position: relative;
    }
    
    /* SIMPLE DROPDOWN MENU - EASIER AND MORE RELIABLE */
    .menu-container {
      position: relative;
      display: inline-block;
    }
    
    #menuButton { 
      width: 44px; 
      height: 44px; 
      display: flex; 
      align-items: center; 
      justify-content: center; 
      background: #0b1a24; 
      border-radius: 10px; 
      border: 2px solid var(--teal); 
      cursor: pointer;
      transition: all 0.2s;
      color: var(--teal);
      box-shadow: 0 0 10px rgba(19, 230, 201, 0.3);
      padding: 0;
      margin: 0;
    }
    
    #menuButton:hover {
      background: var(--teal);
      color: #042027;
      transform: scale(1.05);
    }
    
    #menuButton svg {
      width: 26px;
      height: 26px;
      stroke-width: 2;
    }
    
    /* DROPDOWN CONTENT */
    .dropdown-content {
      display: none;
      position: absolute;
      top: 50px;
      left: 0;
      background: rgba(2,6,9,0.98);
      backdrop-filter: blur(10px);
      min-width: 220px;
      border: 2px solid var(--teal);
      border-radius: 12px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.5);
      z-index: 100;
      padding: 10px 0;
    }
    
    .dropdown-content.show {
      display: block;
    }
    
    .dropdown-content a {
      display: block;
      color: #e6eef0;
      text-decoration: none;
      padding: 14px 20px;
      font-size: 16px;
      transition: all 0.2s;
      border-bottom: 1px solid #17303a;
    }
    
    .dropdown-content a:last-child {
      border-bottom: none;
    }
    
    .dropdown-content a:hover {
      background: #17303a;
      color: var(--teal);
      padding-left: 25px;
    }
    
    .dropdown-content hr {
      border: none;
      border-top: 1px solid #17303a;
      margin: 8px 0;
    }
    
    .dropdown-content small {
      color: #94a3b8;
      display: block;
      text-align: center;
      padding: 10px;
      font-size: 12px;
    }
    
    h1 { 
      color: var(--teal); 
      margin: 0; 
      font-size: 22px; 
      font-weight: 800; 
      text-shadow: 0 0 10px rgba(19, 230, 201, 0.5);
    }
    
    /* Rest of your styles */
    main { 
      max-width: 760px; 
      margin: 30px auto; 
      padding: 20px; 
      position: relative; 
      z-index: 5; 
    }
    
    .warning { 
      background: #7c2d12; 
      color: #ffedd5; 
      padding: 15px; 
      border-radius: 12px; 
      margin-bottom: 20px; 
      border: 1px solid #ea580c; 
    }
    
    .progress-box { 
      background: rgba(11, 18, 32, 0.8); 
      backdrop-filter: blur(5px);
      padding: 20px; 
      border-radius: 16px; 
      border: 1px solid #17303a; 
      margin-bottom: 20px; 
    }
    
    .form { 
      background: rgba(11, 18, 32, 0.8); 
      backdrop-filter: blur(5px);
      padding: 20px; 
      border-radius: 16px; 
      border: 1px solid #17303a; 
    }
    
    input { 
      width: 100%; 
      padding: 12px; 
      border-radius: 8px; 
      border: 1px solid #17303a; 
      background: #061018; 
      color: #fff; 
      margin-top: 6px; 
      font-size: 16px;
    }
    
    button:not(#menuButton) { 
      width: 100%; 
      padding: 14px; 
      border-radius: 10px; 
      background: var(--teal); 
      color: #042027; 
      border: none; 
      font-weight: 700; 
      margin-top: 12px; 
      cursor: pointer;
      font-size: 16px;
    }
    
    .btn { 
      display: inline-block; 
      padding: 12px 20px; 
      border-radius: 10px; 
      background: #25d366; 
      color: #fff; 
      text-decoration: none; 
      font-weight: 600; 
    }
    
    footer { 
      text-align: center; 
      padding: 20px; 
      color: #6b7280; 
      border-top: 1px solid #17303a; 
      margin-top: 30px; 
      position: relative; 
      z-index: 5; 
    }
  </style>
</head>
<body>
  <video id="bgVideo" class="bg-video" autoplay muted loop playsinline preload="auto">
    <source src="/assets/download.mp4" type="video/mp4">
  </video>
  <div class="bg-overlay"></div>

  <header>
    <div class="left-controls">
      <!-- SIMPLE DROPDOWN MENU -->
      <div class="menu-container">
        <button id="menuButton" aria-label="Menu">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 6h18M3 12h18M3 18h18"/>
          </svg>
        </button>
        
        <!-- Dropdown content -->
        <div id="dropdownMenu" class="dropdown-content">
          <a href="<%= otherProject %>" target="_blank" rel="noreferrer">üìÅ Visit Other Projects</a>
          <a href="/admin-login">üîê Admin Panel</a>
          <hr>
          <small>¬© 2026 Meta Team</small>
        </div>
      </div>
      
      <h1>üöÄ Meta VCF</h1>
    </div>
    <div style="color:#94a3b8; font-size:13px;">Build by <strong>Meta Team</strong></div>
  </header>

  <main>
    <div class="warning">
      <strong>‚ö†Ô∏è Important Notice:</strong> If you don't join the group or follow the channel, don't blame me if you miss the file! Make sure to join and stay active.
    </div>

    <section class="progress-box">
      <h2>üìä Live Progress Tracker</h2>
      <div style="display:flex; gap:15px; margin-top:15px;">
        <div style="flex:1; background:#061018; padding:15px; border-radius:12px; border:1px solid #17303a;">
          <div style="color:#94a3b8; font-size:14px;">Collected</div>
          <div style="font-size:32px; color:#13e6c9; font-weight:700;" id="collected"><%= collected %></div>
        </div>
        <div style="flex:1; background:#061018; padding:15px; border-radius:12px; border:1px solid #17303a;">
          <div style="color:#94a3b8; font-size:14px;">Remaining</div>
          <div style="font-size:32px; color:#13e6c9; font-weight:700;" id="remaining"><%= remaining %></div>
        </div>
      </div>
      <div style="text-align:center; margin-top:15px; font-size:32px; color:#4ade80;" id="percent"><%= percent %>%</div>
    </section>

    <section class="form">
      <h3 style="color: var(--teal); margin-top: 0;">üìù Submit Your Contact</h3>
      <form id="contactForm">
        <div>
          <label style="color: #94a3b8;">Full Name</label>
          <input type="text" id="full_name" name="full_name" placeholder="Enter your full name" required />
        </div>
        <div style="margin-top:15px;">
          <label style="color: #94a3b8;">Phone Number</label>
          <input type="tel" id="phone" name="phone" placeholder="+1234567890" required />
          <small style="color:#94a3b8; display:block; margin-top:5px;">Use international format (e.g., +1234567890)</small>
        </div>
        <button type="submit" id="submitBtn">Submit Contact</button>
        <div id="message" style="margin-top: 10px; padding: 10px; border-radius: 8px;"></div>
      </form>
    </section>

    <section style="text-align:center; margin-top:20px;">
      <a class="btn" href="<%= whatsappLink %>" target="_blank" rel="noreferrer">üí¨ Join WhatsApp Group</a>
    </section>
  </main>

  <footer>
    <small><%= footerCredit %></small>
  </footer>

  <script>
    // SIMPLE DROPDOWN MENU - MUCH EASIER
    document.addEventListener('DOMContentLoaded', function() {
      const menuButton = document.getElementById('menuButton');
      const dropdown = document.getElementById('dropdownMenu');
      
      if (menuButton && dropdown) {
        // Toggle dropdown on button click
        menuButton.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          dropdown.classList.toggle('show');
        });
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
          if (!menuButton.contains(e.target) && !dropdown.contains(e.target)) {
            dropdown.classList.remove('show');
          }
        });
        
        // Close on Escape key
        document.addEventListener('keydown', function(e) {
          if (e.key === 'Escape' && dropdown.classList.contains('show')) {
            dropdown.classList.remove('show');
          }
        });
      }
    });

    // Rest of your JavaScript
    async function fetchCount() {
      try {
        const res = await fetch('/api/count');
        if (res.ok) {
          const data = await res.json();
          document.getElementById('collected').textContent = data.collected;
          document.getElementById('remaining').textContent = data.remaining;
          document.getElementById('percent').textContent = data.percent + '%';
        }
      } catch (err) { 
        console.error('Fetch count error:', err); 
      }
    }

    document.getElementById('contactForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const full_name = document.getElementById('full_name').value.trim();
      const phone = document.getElementById('phone').value.trim();
      const submitBtn = document.getElementById('submitBtn');
      const messageDiv = document.getElementById('message');

      submitBtn.disabled = true;
      submitBtn.textContent = 'Submitting...';
      messageDiv.textContent = '';
      messageDiv.className = '';

      try {
        const res = await fetch('/api/contacts', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ full_name, phone }),
        });

        if (res.ok) {
          messageDiv.style.background = '#064e3b';
          messageDiv.style.color = '#c7f4e9';
          messageDiv.style.border = '1px solid #10b981';
          messageDiv.textContent = '‚úÖ Contact submitted! Thank you!';
          document.getElementById('full_name').value = '';
          document.getElementById('phone').value = '';
          fetchCount();
        } else {
          const json = await res.json();
          messageDiv.style.background = '#7f1d1d';
          messageDiv.style.color = '#ffb4b4';
          messageDiv.style.border = '1px solid #ef4444';
          messageDiv.textContent = '‚ùå ' + (json?.message || 'Failed to submit');
        }
      } catch (err) {
        messageDiv.style.background = '#7f1d1d';
        messageDiv.style.color = '#ffb4b4';
        messageDiv.style.border = '1px solid #ef4444';
        messageDiv.textContent = '‚ùå Network error';
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Submit Contact';
      }
    });

    // Try to play video
    const bgVideo = document.getElementById('bgVideo');
    if (bgVideo) {
      bgVideo.play().catch(() => {
        console.log('Video autoplay blocked');
      });
    }

    fetchCount();
    setInterval(fetchCount, 5000);
  </script>
</body>
</html>