<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Meta VCF - Collect Contacts</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', 'system-ui', 'sans-serif';
      background: linear-gradient(135deg, #0b1220 0%, #071124 100%);
      color: #e6eef0;
      line-height: 1.6;
      min-height: 100vh;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      max-width: 1200px;
      margin: 0 auto;
      border-bottom: 1px solid #17303a;
    }

    header h1 {
      font-size: 28px;
      color: #13e6c9;
      font-weight: 700;
    }

    header p {
      color: #6b7280;
      font-size: 14px;
      margin-top: 4px;
    }

    nav {
      display: flex;
      gap: 20px;
      align-items: center;
    }

    nav a {
      color: #79fff0;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s;
    }

    nav a:hover {
      color: #13e6c9;
    }

    main {
      max-width: 760px;
      margin: 20px auto;
      padding: 20px;
    }

    section {
      margin-bottom: 20px;
    }

    .progress-box {
      background: #0f1724;
      border-radius: 12px;
      padding: 18px;
      color: #a3f7e6;
      border: 1px solid #17303a;
    }

    .progress-box h2 {
      margin: 0;
      font-size: 20px;
    }

    .progress-stats {
      margin-top: 12px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
    }

    .stat {
      background: #061018;
      padding: 12px;
      border-radius: 8px;
      border: 1px solid #17303a;
    }

    .stat-label {
      color: #94a3b8;
      font-size: 12px;
      text-transform: uppercase;
      margin-bottom: 6px;
    }

    .stat-value {
      font-size: 24px;
      color: #13e6c9;
      font-weight: 700;
    }

    .progress-percent {
      margin-top: 12px;
      text-align: center;
      font-size: 28px;
      font-weight: 700;
      color: #4ade80;
    }

    .form-container {
      background: #0b1220;
      border-radius: 12px;
      padding: 18px;
      color: #e6eef0;
      border: 1px solid #17303a;
    }

    .form-container h3 {
      margin-bottom: 12px;
      color: #13e6c9;
    }

    .form-group {
      margin-bottom: 12px;
    }

    .form-group label {
      display: block;
      margin-bottom: 6px;
      font-weight: 500;
      color: #d1d5db;
    }

    .form-group input {
      width: 100%;
      padding: 10px;
      border-radius: 8px;
      border: 1px solid #17303a;
      background: #061018;
      color: #fff;
    }

    .form-group input:focus {
      outline: none;
      border-color: #13e6c9;
      box-shadow: 0 0 0 3px rgba(19, 230, 201, 0.1);
    }

    .form-group small {
      display: block;
      margin-top: 4px;
      color: #94a3b8;
      font-size: 12px;
    }

    button {
      padding: 12px 18px;
      border-radius: 10px;
      border: none;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s;
      width: 100%;
    }

    button.primary {
      background: #13e6c9;
      color: #042027;
    }

    button.primary:hover {
      background: #0fc9ad;
      transform: translateY(-2px);
    }

    button.primary:disabled {
      background: #6b7280;
      cursor: not-allowed;
    }

    .message {
      margin-top: 12px;
      padding: 12px;
      border-radius: 8px;
      font-size: 14px;
    }

    .message.success {
      background: #064e3b;
      color: #c7f4e9;
      border: 1px solid #10b981;
    }

    .message.error {
      background: #7f1d1d;
      color: #ffb4b4;
      border: 1px solid #ef4444;
    }

    .warning-box {
      background: #7c2d12;
      border: 1px solid #ea580c;
      border-radius: 8px;
      padding: 12px;
      margin-bottom: 20px;
      color: #ffedd5;
      font-size: 13px;
      line-height: 1.5;
    }

    .warning-box strong {
      color: #ffb4b4;
    }

    .download-link {
      text-align: center;
      margin-top: 20px;
    }

    .download-link a {
      color: #13e6c9;
      text-decoration: none;
      font-weight: 600;
      padding: 10px 20px;
      display: inline-block;
      background: #0f1724;
      border-radius: 8px;
      border: 1px solid #17303a;
      transition: all 0.3s;
    }

    .download-link a:hover {
      background: #17303a;
      color: #0fc9ad;
    }

    footer {
      text-align: center;
      padding: 20px;
      color: #6b7280;
      font-size: 12px;
      margin-top: 40px;
      border-top: 1px solid #17303a;
    }

    @media (max-width: 640px) {
      header {
        flex-direction: column;
        text-align: center;
        gap: 12px;
      }

      nav {
        flex-direction: column;
        gap: 12px;
        width: 100%;
      }

      nav a {
        display: block;
        padding: 8px;
        background: #17303a;
        border-radius: 6px;
      }
    }
  </style>
</head>
<body>
  <header>
    <div>
      <h1>üöÄ Meta VCF</h1>
      <p>Collect contacts & generate VCF files</p>
    </div>
    <nav>
      <a href="https://your-other-projects.example" target="_blank" rel="noreferrer">üìÅ Other Projects</a>
      <a href="/admin-login">üîê Admin</a>
    </nav>
  </header>

  <main>
    <div class="warning-box">
      <strong>‚ö†Ô∏è Important Notice:</strong> If you don't join the group or follow the channel, don't blame me if you miss the file! Make sure to join and stay active.
    </div>

    <section>
      <div class="progress-box">
        <h2>üìä Live Progress Tracker</h2>
        <div class="progress-stats">
          <div class="stat">
            <div class="stat-label">Collected</div>
            <div class="stat-value" id="collected"><%= collected %></div>
          </div>
          <div class="stat">
            <div class="stat-label">Remaining</div>
            <div class="stat-value" id="remaining"><%= remaining %></div>
          </div>
        </div>
        <div class="progress-percent" id="percent"><%= percent %>%</div>
      </div>
    </section>

    <section>
      <div class="form-container">
        <h3>üìù Submit Your Contact</h3>
        <form id="contactForm">
          <div class="form-group">
            <label>Full Name</label>
            <input type="text" id="full_name" name="full_name" placeholder="Enter your full name" required />
          </div>

          <div class="form-group">
            <label>Phone Number</label>
            <input type="tel" id="phone" name="phone" placeholder="+1234567890" required />
            <small>Use international format (e.g., +1234567890)</small>
          </div>

          <button type="submit" class="primary" id="submitBtn">Submit Contact</button>
          <div id="message"></div>
        </form>
      </div>
    </section>

    <section class="download-link">
      <a href="/api/admin/export-vcf">‚¨áÔ∏è Download VCF (when target is met)</a>
    </section>

    <section style="text-align: center; margin-top: 30px;">
      <a href="<%= whatsappLink %>" target="_blank" rel="noreferrer" style="display: inline-block; background: #25d366; color: white; padding: 12px 24px; border-radius: 8px; text-decoration: none; font-weight: 600;">
        üí¨ Join WhatsApp Group
      </a>
    </section>
  </main>

  <footer>
    <p>&copy; 2026 Meta VCF | Powered by Next-Gen Tech</p>
  </footer>

  <script>
    async function fetchCount() {
      try {
        const res = await fetch('/api/count');
        if (res.ok) {
          const data = await res.json();
          document.getElementById('collected').textContent = data.collected;
          document.getElementById('remaining').textContent = data.remaining;
          document.getElementById('percent').textContent = data.percent + '%';
        }
      } catch (err) {
        console.error(err);
      }
    }

    document.getElementById('contactForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const full_name = document.getElementById('full_name').value.trim();
      const phone = document.getElementById('phone').value.trim();
      const submitBtn = document.getElementById('submitBtn');
      const messageDiv = document.getElementById('message');

      submitBtn.disabled = true;
      submitBtn.textContent = 'Submitting...';
      messageDiv.textContent = '';

      try {
        const res = await fetch('/api/contacts', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ full_name, phone }),
        });

        if (res.ok) {
          messageDiv.className = 'message success';
          messageDiv.textContent = '‚úÖ Contact submitted! Thank you!';
          document.getElementById('full_name').value = '';
          document.getElementById('phone').value = '';
          fetchCount();
        } else {
          const json = await res.json();
          messageDiv.className = 'message error';
          messageDiv.textContent = '‚ùå ' + (json?.message || 'Failed to submit');
        }
      } catch (err) {
        messageDiv.className = 'message error';
        messageDiv.textContent = '‚ùå Network error';
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Submit Contact';
      }
    });

    // Poll every 5 seconds
    fetchCount();
    setInterval(fetchCount, 5000);
  </script>
</body>
</html>