<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Meta VCF - Collect Contacts</title>
  <style>
    :root{ --teal:#13e6c9; --muted:#94a3b8; }
    body { 
      font-family: Inter, system-ui, sans-serif; 
      background: black; 
      color: #e6eef0; 
      margin:0; 
      padding:0; 
      min-height:100vh; 
      overflow-x:hidden; 
    }
    .bg-video { 
      position: fixed; 
      right: 0; 
      bottom: 0; 
      min-width: 100%; 
      min-height: 100%; 
      width: auto; 
      height: auto; 
      z-index: -2; 
      object-fit: cover; 
      opacity: 0.12; 
    }
    .bg-overlay { 
      position: fixed; 
      inset: 0; 
      background: linear-gradient(180deg, rgba(3,7,10,0.55), rgba(3,7,10,0.7)); 
      z-index:-1; 
    }
    
    /* Header styles */
    header { 
      display: flex; 
      align-items: center; 
      justify-content: space-between; 
      padding: 15px 20px; 
      position: relative; 
      z-index: 10; 
      background: rgba(2,6,9,0.8);
      backdrop-filter: blur(5px);
      border-bottom: 1px solid #17303a;
    }
    
    .left-controls { 
      display: flex; 
      align-items: center; 
      gap: 15px; 
    }
    
    /* THREE LINES HAMBURGER MENU - FIXED AND VISIBLE */
    #hamburgerBtn { 
      width: 44px; 
      height: 44px; 
      display: flex; 
      align-items: center; 
      justify-content: center; 
      background: #0b1a24; 
      border-radius: 10px; 
      border: 2px solid var(--teal); 
      cursor: pointer;
      transition: all 0.2s;
      color: var(--teal);
      box-shadow: 0 0 10px rgba(19, 230, 201, 0.3);
      padding: 0;
      margin: 0;
    }
    
    #hamburgerBtn:hover {
      background: var(--teal);
      color: #042027;
      transform: scale(1.05);
    }
    
    #hamburgerBtn svg {
      width: 26px;
      height: 26px;
      stroke-width: 2;
    }
    
    h1 { 
      color: var(--teal); 
      margin: 0; 
      font-size: 22px; 
      font-weight: 800; 
      text-shadow: 0 0 10px rgba(19, 230, 201, 0.5);
    }
    
    /* Sidebar styles - FIXED */
    #sidebar { 
      position: fixed; 
      top: 0; 
      left: -320px; 
      width: 300px; 
      height: 100%; 
      background: rgba(2,6,9,0.98); 
      backdrop-filter: blur(10px); 
      border-right: 2px solid var(--teal); 
      padding: 20px; 
      transition: left 0.3s ease; 
      z-index: 1000;
      box-shadow: 4px 0 20px rgba(0,0,0,0.7);
      overflow-y: auto;
    }
    
    #sidebar.open { 
      left: 0; 
    } 
    
    .sidebar-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 25px;
      padding-bottom: 15px;
      border-bottom: 2px solid #17303a;
    }
    
    .sidebar-header h3 { 
      color: var(--teal); 
      margin: 0;
      font-size: 22px;
      font-weight: 700;
    }
    
    #closeSidebarBtn {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #061018;
      border: 2px solid #17303a;
      border-radius: 8px;
      cursor: pointer;
      color: #94a3b8;
      transition: all 0.2s;
      padding: 0;
    }
    
    #closeSidebarBtn:hover {
      background: #17303a;
      color: #ef4444;
      border-color: #ef4444;
    }
    
    #sidebar a {
      display: block; 
      color: #e6eef0; 
      text-decoration: none; 
      padding: 14px 16px; 
      margin-bottom: 12px; 
      border-radius: 10px; 
      background: #061018; 
      border: 1px solid #17303a;
      transition: all 0.2s;
      font-size: 16px;
    }
    
    #sidebar a:hover {
      background: #17303a;
      border-color: var(--teal);
      transform: translateX(5px);
    }
    
    #sidebar hr {
      border: none;
      border-top: 2px solid #17303a;
      margin: 20px 0;
    }
    
    #sidebar small {
      color: #94a3b8;
      display: block;
      text-align: center;
      font-size: 13px;
    }
    
    /* Overlay - FIXED */
    #sidebarOverlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(4px);
      z-index: 999;
      display: none;
    }
    
    #sidebarOverlay.active {
      display: block;
    }
    
    /* Rest of your existing styles */
    main { 
      max-width: 760px; 
      margin: 30px auto; 
      padding: 20px; 
      position: relative; 
      z-index: 5; 
    }
    
    .warning { 
      background: #7c2d12; 
      color: #ffedd5; 
      padding: 15px; 
      border-radius: 12px; 
      margin-bottom: 20px; 
      border: 1px solid #ea580c; 
    }
    
    .progress-box { 
      background: rgba(11, 18, 32, 0.8); 
      backdrop-filter: blur(5px);
      padding: 20px; 
      border-radius: 16px; 
      border: 1px solid #17303a; 
      margin-bottom: 20px; 
    }
    
    .form { 
      background: rgba(11, 18, 32, 0.8); 
      backdrop-filter: blur(5px);
      padding: 20px; 
      border-radius: 16px; 
      border: 1px solid #17303a; 
    }
    
    input { 
      width: 100%; 
      padding: 12px; 
      border-radius: 8px; 
      border: 1px solid #17303a; 
      background: #061018; 
      color: #fff; 
      margin-top: 6px; 
      font-size: 16px;
    }
    
    button:not(#hamburgerBtn):not(#closeSidebarBtn) { 
      width: 100%; 
      padding: 14px; 
      border-radius: 10px; 
      background: var(--teal); 
      color: #042027; 
      border: none; 
      font-weight: 700; 
      margin-top: 12px; 
      cursor: pointer;
      font-size: 16px;
    }
    
    .btn { 
      display: inline-block; 
      padding: 12px 20px; 
      border-radius: 10px; 
      background: #25d366; 
      color: #fff; 
      text-decoration: none; 
      font-weight: 600; 
    }
    
    footer { 
      text-align: center; 
      padding: 20px; 
      color: #6b7280; 
      border-top: 1px solid #17303a; 
      margin-top: 30px; 
      position: relative; 
      z-index: 5; 
    }
    
    @media (max-width:640px) { 
      main { margin: 20px 16px; } 
      #sidebar { width: 85%; } 
    }
  </style>
</head>
<body>
  <video id="bgVideo" class="bg-video" autoplay muted loop playsinline preload="auto">
    <source src="/assets/download.mp4" type="video/mp4">
  </video>
  <div class="bg-overlay"></div>
  
  <!-- Overlay for sidebar -->
  <div id="sidebarOverlay" class="sidebar-overlay"></div>

  <header>
    <div class="left-controls">
      <!-- THREE LINES HAMBURGER MENU - FIXED -->
      <button id="hamburgerBtn" class="hamburger" aria-label="Open menu">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 6h18M3 12h18M3 18h18"/>
        </svg>
      </button>
      <h1>üöÄ Meta VCF</h1>
    </div>
    <div style="color:#94a3b8; font-size:13px;">Build by <strong>Meta Team</strong></div>
  </header>

  <!-- Sidebar -->
  <aside id="sidebar" class="sidebar" aria-hidden="true">
    <div class="sidebar-header">
      <h3>Menu</h3>
      <button id="closeSidebarBtn" class="close-btn" aria-label="Close menu">
        <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 6L6 18M6 6l12 12"/>
        </svg>
      </button>
    </div>
    
    <a href="<%= otherProject %>" target="_blank" rel="noreferrer">üìÅ Visit Other Projects</a>
    <a href="/admin-login">üîê Admin Panel</a>
    <hr>
    <small>¬© 2026 Meta Team</small>
  </aside>

  <main>
    <div class="warning">
      <strong>‚ö†Ô∏è Important Notice:</strong> If you don't join the group or follow the channel, don't blame me if you miss the file! Make sure to join and stay active.
    </div>

    <section class="progress-box">
      <h2>üìä Live Progress Tracker</h2>
      <div class="stats-container" style="display:flex; gap:15px; margin-top:15px;">
        <div class="stat-card" style="flex:1; background:#061018; padding:15px; border-radius:12px; border:1px solid #17303a;">
          <div style="color:#94a3b8; font-size:14px;">Collected</div>
          <div style="font-size:32px; color:#13e6c9; font-weight:700;" id="collected"><%= collected %></div>
        </div>
        <div class="stat-card" style="flex:1; background:#061018; padding:15px; border-radius:12px; border:1px solid #17303a;">
          <div style="color:#94a3b8; font-size:14px;">Remaining</div>
          <div style="font-size:32px; color:#13e6c9; font-weight:700;" id="remaining"><%= remaining %></div>
        </div>
      </div>
      <div style="text-align:center; margin-top:15px; font-size:32px; color:#4ade80;" id="percent"><%= percent %>%</div>
    </section>

    <section class="form">
      <h3 style="color: var(--teal); margin-top: 0;">üìù Submit Your Contact</h3>
      <form id="contactForm">
        <div>
          <label style="color: #94a3b8;">Full Name</label>
          <input type="text" id="full_name" name="full_name" placeholder="Enter your full name" required />
        </div>
        <div style="margin-top:15px;">
          <label style="color: #94a3b8;">Phone Number</label>
          <input type="tel" id="phone" name="phone" placeholder="+1234567890" required />
          <small style="color:#94a3b8; display:block; margin-top:5px;">Use international format (e.g., +1234567890)</small>
        </div>
        <button type="submit" id="submitBtn">Submit Contact</button>
        <div id="message" style="margin-top: 10px; padding: 10px; border-radius: 8px;"></div>
      </form>
    </section>

    <section style="text-align:center; margin-top:20px;">
      <a class="btn" href="<%= whatsappLink %>" target="_blank" rel="noreferrer">üí¨ Join WhatsApp Group</a>
    </section>
  </main>

  <footer>
    <small><%= footerCredit %></small>
  </footer>

  <script>
    // FIXED: Sidebar JavaScript - Wait for DOM to load
    document.addEventListener('DOMContentLoaded', function() {
      console.log('DOM loaded - initializing sidebar');
      
      // Get elements
      const sidebar = document.getElementById('sidebar');
      const hamburgerBtn = document.getElementById('hamburgerBtn');
      const closeBtn = document.getElementById('closeSidebarBtn');
      const overlay = document.getElementById('sidebarOverlay');
      
      console.log('Elements found:', { 
        sidebar: !!sidebar, 
        hamburgerBtn: !!hamburgerBtn, 
        closeBtn: !!closeBtn, 
        overlay: !!overlay 
      });
      
      // Check if elements exist
      if (!sidebar || !hamburgerBtn || !closeBtn || !overlay) {
        console.error('Sidebar elements not found!');
        return;
      }
      
      // Function to open sidebar
      function openSidebar() {
        console.log('Opening sidebar');
        sidebar.classList.add('open');
        overlay.classList.add('active');
        sidebar.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden'; // Prevent scrolling
      }
      
      // Function to close sidebar
      function closeSidebar() {
        console.log('Closing sidebar');
        sidebar.classList.remove('open');
        overlay.classList.remove('active');
        sidebar.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = ''; // Restore scrolling
      }
      
      // Add click event to hamburger button
      hamburgerBtn.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        console.log('Hamburger button clicked');
        openSidebar();
      });
      
      // Add click event to close button
      closeBtn.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        console.log('Close button clicked');
        closeSidebar();
      });
      
      // Add click event to overlay
      overlay.addEventListener('click', function(e) {
        e.preventDefault();
        console.log('Overlay clicked');
        closeSidebar();
      });
      
      // Close on Escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && sidebar.classList.contains('open')) {
          console.log('Escape key pressed');
          closeSidebar();
        }
      });
      
      console.log('Sidebar initialized successfully');
    });

    // Rest of your existing JavaScript
    async function fetchCount() {
      try {
        const res = await fetch('/api/count');
        if (res.ok) {
          const data = await res.json();
          document.getElementById('collected').textContent = data.collected;
          document.getElementById('remaining').textContent = data.remaining;
          document.getElementById('percent').textContent = data.percent + '%';
        }
      } catch (err) { 
        console.error('Fetch count error:', err); 
      }
    }

    document.getElementById('contactForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const full_name = document.getElementById('full_name').value.trim();
      const phone = document.getElementById('phone').value.trim();
      const submitBtn = document.getElementById('submitBtn');
      const messageDiv = document.getElementById('message');

      submitBtn.disabled = true;
      submitBtn.textContent = 'Submitting...';
      messageDiv.textContent = '';
      messageDiv.className = '';

      try {
        const res = await fetch('/api/contacts', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ full_name, phone }),
        });

        if (res.ok) {
          messageDiv.style.background = '#064e3b';
          messageDiv.style.color = '#c7f4e9';
          messageDiv.style.border = '1px solid #10b981';
          messageDiv.textContent = '‚úÖ Contact submitted! Thank you!';
          document.getElementById('full_name').value = '';
          document.getElementById('phone').value = '';
          fetchCount();
        } else {
          const json = await res.json();
          messageDiv.style.background = '#7f1d1d';
          messageDiv.style.color = '#ffb4b4';
          messageDiv.style.border = '1px solid #ef4444';
          messageDiv.textContent = '‚ùå ' + (json?.message || 'Failed to submit');
        }
      } catch (err) {
        messageDiv.style.background = '#7f1d1d';
        messageDiv.style.color = '#ffb4b4';
        messageDiv.style.border = '1px solid #ef4444';
        messageDiv.textContent = '‚ùå Network error';
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Submit Contact';
      }
    });

    // Try to play video
    const bgVideo = document.getElementById('bgVideo');
    if (bgVideo) {
      bgVideo.play().catch(() => {
        console.log('Video autoplay blocked');
      });
    }

    // Initial fetch and polling
    fetchCount();
    setInterval(fetchCount, 5000);
  </script>
</body>
</html>