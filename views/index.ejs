<body>
  <!-- Animated Background -->
  <div class="bg-animated">
    <div class="bg-gradient"></div>
    <div class="bg-particles"></div>
  </div>

  <!-- Header -->
  <header class="header">
    <div class="header-container">
      <div class="logo">
        <div class="logo-icon">
          <i class="fas fa-address-book"></i>
        </div>
        <span class="logo-text">Meta VCF</span>
      </div>

      <!-- Desktop Navigation -->
      <nav class="nav-menu">
        <a href="#home" class="nav-link">
          <i class="fas fa-home"></i>
          Home
        </a>
        <a href="#features" class="nav-link">
          <i class="fas fa-star"></i>
          Features
        </a>
        <a href="#contact" class="nav-link">
          <i class="fas fa-envelope"></i>
          Contact
        </a>
        <a href="/admin-login" class="nav-link highlight">
          <i class="fas fa-lock"></i>
          Admin
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <button class="mobile-menu-btn" id="mobileMenuBtn">
        <i class="fas fa-bars"></i>
      </button>
    </div>
  </header>

  <main class="main-container">
    <!-- Notice Banner -->
    <div class="notice-banner">
      <div class="notice-icon">
        <i class="fas fa-exclamation-triangle"></i>
      </div>
      <div class="notice-content">
        <div class="notice-title">Important Notice</div>
        <div class="notice-text">
          If you don't join the group or follow the channel, don't blame me if you miss the file! 
          Make sure to join and stay active.
        </div>
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-users"></i>
        </div>
        <div class="stat-value" id="collected"><%= collected %></div>
        <div class="stat-label">Collected</div>
        <div class="stat-trend">
          <i class="fas fa-arrow-up"></i>
          Active Users
        </div>
      </div>

      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-hourglass-half"></i>
        </div>
        <div class="stat-value" id="remaining"><%= remaining %></div>
        <div class="stat-label">Remaining</div>
        <div class="stat-trend">
          <i class="fas fa-clock"></i>
          Until Goal
        </div>
      </div>

      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-bullseye"></i>
        </div>
        <div class="stat-value" id="target"><%= target %></div>
        <div class="stat-label">Target</div>
        <div class="stat-trend">
          <i class="fas fa-flag"></i>
          Monthly Goal
        </div>
      </div>
    </div>

    <!-- Progress Bar -->
    <div class="progress-container">
      <div class="progress-header">
        <span class="progress-title">Campaign Progress</span>
        <span class="progress-percent" id="percent"><%= percent %>%</span>
      </div>
      <div class="progress-bar-bg">
        <div class="progress-bar-fill" style="width: <%= percent %>%;"></div>
      </div>
      <div class="progress-stats">
        <span><i class="fas fa-check-circle" style="color: var(--success);"></i> <%= collected %> completed</span>
        <span><i class="fas fa-circle" style="color: var(--text-muted);"></i> <%= remaining %> to go</span>
      </div>
    </div>

    <!-- Form Section -->
    <div class="form-section" id="contact">
      <!-- Submission Form -->
      <div class="form-card">
        <h2 class="form-title">Join the Network</h2>
        <p class="form-subtitle">Submit your details to be part of our community</p>

